<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allRecipeFragment">

    <fragment
        android:id="@+id/allRecipeFragment"
        android:name="com.hgecapsi.ispacerecipeevening.view.fragments.AllRecipeFragment"
        android:label="All Recipe"
        tools:layout="@layout/fragment_all_recipe" >
        <action
            android:id="@+id/action_allRecipeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.hgecapsi.ispacerecipeevening.view.fragments.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/randomDishFragment"
        android:name="com.hgecapsi.ispacerecipeevening.view.fragments.RandomDishFragment"
        android:label="Random Dish"
        tools:layout="@layout/fragment_random_dish" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.hgecapsi.ispacerecipeevening.view.fragments.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
